    REPLACE_TEXTUALLY CASE_SENSITIVE "Ô" "Ê"
    REPLACE_TEXTUALLY CASE_SENSITIVE "Ú" "Ò"
    REPLACE_TEXTUALLY CASE_SENSITIVE "BG1engine" "BG2engine"
   END
