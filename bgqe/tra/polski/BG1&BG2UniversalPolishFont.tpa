   PATCH_IF (~%SOURCE_EXT%~ STRING_EQUAL_CASE ~TRA~) AND FILE_CONTAINS_EVALUATED(~%PL_TRA_Patch%/%SOURCE_FILE%~ ~BG1engine~) BEGIN //TRA are BG1 coded
    REPLACE_TEXTUALLY CASE_SENSITIVE "Ì" "Ø"
